+prefix-classes($prefix)

    th.action-container
      border-bottom: 1px solid $strongcolor

    .action-container
      border-bottom: 1px solid $lightcolor
      cursor pointer
      font-family $fontfamily
      height $rowheight
      position relative
      width 5px

      .no-actions
        display none

      .{$actioniconclass}
        cursor pointer
        icon('action')
        padding-left 5px
        position relative


        &::before
          border-radius(3px)
          cursor pointer
          position absolute
          right 5px
          text-align center
          top 5px
          width 6px

      &.action-menu-selected
        span
          &::before
            background-color $strongcolor
